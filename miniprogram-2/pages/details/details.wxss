/* pages/details/details.wxss */
image {
  width: 100%;
  height: 100%;
}

.container {
  font-size: 28rpx;
}

.clip-img {
  height: 850rpx;
  overflow: hidden;
  clip-path: polygon(0% 0%, 0% 100%, 100% 80%, 100% 0%);
  box-shadow: 0 2rpx 10rpx 0rpx rgba(0,0,0,0.7);
}
.clip-img > image {
  display: block;
}

.block {
  background: #fff;
}
.brief {
  position: relative;
  z-index: 2;
  margin-top: -88rpx;
  display: flex;
  align-items: flex-end;
}
.brief .img-mv {
  width: 210rpx;
  height: 280rpx;
  margin: 0rpx 30rpx;
  border-radius: 8rpx;
  box-shadow: 0px 4px 12px 0px rgba(71,71,71,0.59);
}
.brief .brief-info {
  flex: 1;
  color: #333;
  padding-right: 30rpx;
  overflow: hidden;
}
.brief-info .title {
  color: #333;
  font-size: 32rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.brief-info .brief-time {
  margin-top: 11rpx;
  font-size: 22rpx;
  color: #999;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-line-clamp: 4; 
}
.brief-info .button {
  font-size: 26rpx;
  color: #999;
}
.brief-info .button + .button {
  margin-left: 66rpx;
}
.flex-align-center {
  display: flex;
  align-items: center;
}
.flex-align-center .icon {
  width: 32rpx;
  height: 34rpx;
  margin-right: 14rpx;
}
button text{
  font-size:24rpx; 
}
.subtitle {
  color: #333;
  line-height: 2.8em;
  font-size: 28rpx;
  font-weight: bold;
}
.summary {
  font-size: 26rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}