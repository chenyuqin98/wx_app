/* pages/upload/upload.wxss */
.tifo {
  margin-bottom: -150rpx;
}
.tifo image{
  width: 600rpx;
  margin-left: 75rpx;
  clip-path: circle(50% at 50% 50%);
  z-index: 1;
}
.upload_form{
  background-color: #FF9E79;
  padding-top: 200rpx;
  padding-bottom: 20rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;

}
.header{
  text-align: center;
  color: wheat;
}
.header view{
  border: 2rpx white double;
}
.form_body{
  width: 750rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr 1fr;
}
.form-item{
  margin: auto;
  width: 320rpx;
}
.form-item text{
  font-size: 20rpx;
  color: wheat;
}
.form-item input{
  border:2rpx saddlebrown solid;
  border-radius: 10rpx;
  background-color: white;
}
.form-intro{
  width: 750rpx;
}
.form-intro text{
  font-size: 20rpx;
  color: wheat;
  margin-left: 30rpx;
}
.form-intro textarea{
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 690rpx;
  height: 200rpx;
  background-color: white;
  border-radius: 10rpx;
}
.form-file{
  width: 750rpx
}
.form-file text{
  font-size: 20rpx;
  color: wheat;
  margin-left: 30rpx;
  display: block
}
.form-file textarea{
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 690rpx;
  height: 50rpx;
  background-color: white;
  border-radius: 10rpx;
}
.form-cover text{
  font-size: 20rpx;
  color: wheat;
  margin-left: 30rpx;
}
.form-cover{
  width: 750rpx
}
.form-cover textarea{
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 690rpx;
  height: 50rpx;
  background-color: white;
  border-radius: 10rpx;
}
.weui-uploader__bd{
  margin-left: 30rpx;
}
#title {
	width:30%;
	height:40px;
	border:1px solid #dbdbdb;
	outline:none;
	font-size:20px;
	text-indent:10px;
}
label {
  position:relative;
	width:291px;
	margin:10px auto;
	display:inline-block;	
} 
label:after {
	content:"";
	display:inline-block;
	width:0;
	height:2px;
	background:red;
	transition:width 1s;
	position:absolute;
	bottom:1px;
	left:1px;
}
.active:after {
	width:calc(100% - 2px)
}
.submit{
  width: 450rpx;
  height: 100rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
  margin-left: 150rpx;
  margin-right: 150rpx;
  background-color: blue;
  border-style: double;
  color:white;
  text-align: center;
  line-height: 100rpx;
  font-size: 35rpx;
}
page{
  background-color: #e2e1e4
}
