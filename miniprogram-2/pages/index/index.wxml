<!--index.wxml-->
<import src='/pages/cell/cell' />
<view class="container">
  <view class="my_header">
    <view class="bg"></view>
    <view class="userinfo">
      <view class="cell-left">
        <view class="userinfo-avatar btn-opacity" bindtap="bindViewTap">
          <open-data type='userAvatarUrl' />
        </view>
        <view class='userinfo__right'>
          <open-data class="userinfo-nickname" type="userNickName" lang="zh_CN"></open-data>
          <view class='userinfo__extra'>{{motto}}</view>
        </view>
      </view>
      <view class='actions'>
        <view class='actions-item btn-opacity' bindtap='toFavMovieList'>
          <image class='actions-item__icon' src='/assets/images/icon-movielist.png' mode='aspectFit'></image>
          <view class='actions-item__name'>书单</view>
        </view>
        <view class='actions-item btn-opacity' bindtap='toFavCards'>
          <image class='actions-item__icon' src='/assets/images/icon-card.png' mode='aspectFit'></image>
          <view class='actions-item__name'>历史</view>
        </view>
        <view class='actions-item btn-opacity'>
          <image class='actions-item__icon' src='/assets/images/icon-achievement.png' mode='aspectFit'></image>
          <view class='actions-item__name'>收藏</view>
        </view>
      </view>
    </view>
  </view>
  <view class="my_body">
    <template is='row-cell' data='{{iconPath:"/assets/images/icon-message.png",title:"应用分享"}}' />
    <template is='row-cell' data='{{iconPath:"/assets/images/icon-record.png",title:"资源上传",bindTap:"toEvalute"}}' />
    <template is='row-cell' data='{{iconPath:"/assets/images/icon-setting.png",title:"设置",bindTap:"toSetting"}}' />
    <template is='row-cell' data='{{iconPath:"/assets/images/icon-feedback.png",title:"意见反馈"}}' />
    <template is='row-cell' data='{{iconPath:"/assets/images/icon-about.png",title:"关于",bindTap:"toAbout"}}' />
  </view>
</view>
